generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  created_at     DateTime @default(now())
  password       String
  first_name     String
  last_name      String
  middle_name    String?
  title          String?
  affiliation    String?
  web_page       String?
  address_line_1 String?
  address_line_2 String?
  orcid_id       String?
  city           String?
  state          String?
  country        String?
}
